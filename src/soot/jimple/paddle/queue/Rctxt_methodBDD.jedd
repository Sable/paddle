package soot.jimple.paddle.queue;
import soot.util.*;
import soot.jimple.paddle.bdddomains.*;
import soot.jimple.paddle.*;
import soot.jimple.toolkits.callgraph.*;
import soot.*;
import soot.util.queue.*;
import jedd.*;
import java.util.*;

public final class Rctxt_methodBDD extends Rctxt_method {
    private <ctxt:C1, method:MS> bdd;
    void add( <ctxt:C1, method:MS> tuple ) { bdd |= tuple; }
    public Rctxt_methodBDD( <ctxt:C1, method:MS> bdd, String name, PaddleQueue q ) { this(name, q); add(bdd); }
    public Rctxt_methodBDD( <ctxt:C1, method:MS> bdd ) { this("", null); add(bdd); }
    Rctxt_methodBDD(String name, PaddleQueue q) { super(name, q); bdd = 0B; }
    public Iterator iterator() {;
        return new Iterator() {
            private Iterator it;
            public boolean hasNext() {
                if( it != null && it.hasNext() ) return true;
                if( bdd != 0B ) return true;
                return false;
            }
            public Object next() {
                if( it == null || !it.hasNext() ) {
                    it = bdd.iterator( new Attribute[] { ctxt.v(), method.v() } );
                    bdd = 0B;
                }
                Object[] components = (Object[]) it.next();
                return new Tuple( (Context) components[0], (SootMethod) components[1] );
            }
            public void remove() { throw new UnsupportedOperationException(); }
        };
    }
    public <ctxt:C1, method:MS> get() {
        <ctxt:C1, method:MS> ret = bdd;
        bdd = 0B;
        return ret;
    }
    public boolean hasNext() { return bdd != 0B; }
}
